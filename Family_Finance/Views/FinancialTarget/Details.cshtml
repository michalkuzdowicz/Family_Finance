@model Family_Finance.Models.FinancialTarget

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-light">Details</h1>

<div>
    <h4 class="text-light">FinancialTarget</h4>
    <hr />
    <dl class="row text-light">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TargetAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TargetAmount) zł
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentAmount) zł
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrentAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
    </dl>
</div>
<div class="mt-2">
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

<div class="mt-5">
    <h4 class="text-light">Lista osób wpłacających na ten cel</h4>
    <table class="table text-light">
        <thead>
            <tr>
                <th>Osoba</th>
                <th>Kwota</th>
                <th>Data</th>
                <th>Notatka</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.TargetTransactions)
            {
                <tr>
                    <td>@transaction.User.UserName</td>
                    <td>@transaction.Amount.ToString("C")</td>
                    <td>@transaction.TransactionDate.ToShortDateString()</td>
                    <td>@transaction.Note</td>
                </tr>
            }
        </tbody>
    </table>
</div>
